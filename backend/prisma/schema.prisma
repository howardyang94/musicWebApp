datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model Link {
    id          Int         @id @default(autoincrement())
    createdAt   DateTime    @default(now())
    title       String
    artist      String  
    tags        String
    description String
    url         String
    // musicUrl String
    // discogsUrl  String
    postedBy    User?       @relation(fields: [postedById], references: [id])
    postedById  Int?
    // votes       Vote[]
}

model User {
    id          Int         @id @default(autoincrement())
    name        String
    email       String      @unique
    password    String
    links       Link[]
}

